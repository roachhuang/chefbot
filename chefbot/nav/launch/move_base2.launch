<?xml version="1.0"?>
<launch>
  <arg name="move_forward_only" default="false"/>
  <!-- <arg name="base_global_planner" default="carrot_planner/CarrotPlanner"/> -->
  <arg name="base_global_planner" default="navfn/NavfnROS" />
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <param name="base_global_planner" value="$(arg base_global_planner)" />
    <param name="base_local_planner" value="$(arg base_local_planner)" />

    <rosparam file="$(find nav)/config/planner.yaml" command="load" />
    <rosparam file="$(find nav)/config/common_costmap.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find nav)/config/common_costmap.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find nav)/config/local_costmap.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find nav)/config/global_costmap.yaml" command="load" ns="global_costmap" />

  </node>

</launch>
