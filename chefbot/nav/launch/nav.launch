<launch>
  <!-- Arguments -->
  <arg name="open_rviz" default="true" />
  <arg name="move_forward_only" default="false" />
  <arg name="model" default="$(find chefbot_description)/urdf/kbot.xacro"/>

  <!-- 
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>
  -->

  <!-- load Map -->
  <include file='$(find load_map)/launch/load_map.launch' />  

  <!-- AMCL -->
  <include file="$(find nav)/launch/amcl.launch" />

  <!-- move_base -->
  <include file="$(find nav)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)" />
  </include>
  
  <param name="robot_description" command="$(find xacro)/xacro $(arg model)"/> 

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">    
  </node>

  <!-- rviz -->
  <group if="$(arg open_rviz)">
    <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find nav)/rviz/turtlebot3_navigation.rviz" />
  </group>

</launch>
