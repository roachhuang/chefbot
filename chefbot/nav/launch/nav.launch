<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find load_map)/map/kbot.yaml" />
  <arg name="open_rviz" default="true" />
  <arg name="move_forward_only" default="false" />

  <!-- 
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>
  -->

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)" output='screen' />

  <!-- AMCL -->
  <include file="$(find nav)/launch/amcl.launch" />

  <!-- move_base -->
  <include file="$(find nav)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)" />
  </include>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
    <param name="robot_description" command="$(find xacro)/xacro '$(find chefbot_description)/urdf/kbot.xacro'" />
  </node>

  <!-- rviz -->
  <group if="$(arg open_rviz)">
    <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find nav)/rviz/turtlebot3_navigation.rviz" />
  </group>

</launch>
